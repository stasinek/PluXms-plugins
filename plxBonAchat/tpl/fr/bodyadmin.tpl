<p>Cher utilisateur,</p>

<table border="0" cellpadding="1" cellspacing="1" width="100%">
	<tbody>
		<tr>
			<td width="150"><strong>Date</strong></td>
			<td>{{ date }}</td>
		</tr>
		<tr>
			<td><strong>Code</strong></td>
			<td>{{ idcode }}</td>
		</tr>
		<tr>
			<td width="150"><strong>Civilité</strong></td>
			<td>{{ title }}</td>
		</tr>
		<tr>
			<td><strong>Nom</strong></td>
			<td>{{ name }}</td>
		</tr>
		<tr>
			<td><strong>Prénom</strong></td>
			<td>{{ firstname }}</td>
		</tr>
		<tr>
			<td><strong>Adresse</strong></td>
			<td>{{ address }}</td>
		</tr>
		<tr>
			<td><strong>Code Postal</strong></td>
			<td>{{ zipcode }}</td>
		</tr>
		<tr>
			<td><strong>Ville</strong></td>
			<td>{{ city }}</td>
		</tr>
		<tr>
			<td><strong>Pays</strong></td>
			<td>{{ country }}</td>
		</tr>
		<tr>
			<td><strong>Téléphone</strong></td>
			<td>{{ phone }}</td>
		</tr>
		<tr>
			<td><strong>Email</strong></td>
			<td>{{ email }}</td>
		</tr>
	</tbody>
</table>

<table border="0" cellpadding="1" cellspacing="1" id="mon-ID" width="100%">
	<tbody>
		<tr>
			<td colspan="2" height="10">&nbsp;</td>
		</tr>
		<tr>
			<td width="150"><strong>Civilité</strong></td>
			<td>{{ recipient_title }}</td>
		</tr>
		<tr>
			<td><strong>Nom</strong></td>
			<td>{{ recipient_name }}</td>
		</tr>
		<tr>
			<td><strong>Prénom</strong></td>
			<td>{{ recipient_firstname }}</td>
		</tr>
		<tr>
			<td><strong>Téléphone</strong></td>
			<td>{{ recipient_phone }}</td>
		</tr>
		<tr>
			<td><strong>Email</strong></td>
			<td>{{ recipient_email }}</td>
		</tr>
	</tbody>
</table>

